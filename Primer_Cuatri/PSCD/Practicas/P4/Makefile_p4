#*****************************************************************
# File:   Makefile_p3
# Author: PSCD-Unizar
# Date:   octubre 2025
# Coms:   Ejecutar "make -f Makefile_p3" para compilar
#         Ejecutar "make -f Makefile_p3 clean" para limpiar (borrar lo que genere)
#*****************************************************************

#---------------------------------------------------------
# macros
RM = /bin/rm -f  # para limpiar
CC = g++         # compilador
#---------------------------------------------------------
DIR_LIBS=./librerias
SEM_LIB=${DIR_LIBS}/Semaphore_V4
SEMAPHORE=${SEM_LIB}/Semaphore_V4
BUFF_LIB=${DIR_LIBS}/MultiBuffer
BUFF=${BUFF_LIB}/MultiBuffer
#---------------------------------------------------------
# opciones compilación y enlazado ("linkado")
CPPFLAGS = -g -I. -I${SEM_LIB} -I${BUFF_LIB} -O2 -std=c++11 -fmax-errors=1 # opciones compilación
LDFLAGS  = -pthread  # opciones de "linkado"
#---------------------------------------------------------
# vars
EJEC = practica_4
MON = monitor

all: ${EJEC}
#---------------------------------------------------------
# "linkar"
${EJEC}: ${EJEC}.o ${SEMAPHORE}.o ${MON}.o
	${CC} ${EJEC}.o ${SEMAPHORE}.o ${MON}.o -o ${EJEC} ${CPPFLAGS} ${LDFLAGS}

#---------------------------------------------------------
# compilar
${EJEC}.o: ${EJEC}.cpp ${BUFF}.hpp
	${CC} -c ${EJEC}.cpp -o ${EJEC}.o ${CPPFLAGS}

${SEMAPHORE}.o: ${SEMAPHORE}.hpp ${SEMAPHORE}.cpp
	${CC} -c ${SEMAPHORE}.cpp -o ${SEMAPHORE}.o ${CPPFLAGS}

${MON}.o: ${MON}.hpp ${BUFF}.cpp
	${CC} -c ${MON}.cpp -o ${MON}.o ${CPPFLAGS}

#---------------------------------------------------------
# Cuidado con lo que se pone aquí, que se borra sin preguntar
clean:
	$(RM) ${SEMAPHORE}.o ${BUFF}.o ${EJEC}.o ${EJEC}
